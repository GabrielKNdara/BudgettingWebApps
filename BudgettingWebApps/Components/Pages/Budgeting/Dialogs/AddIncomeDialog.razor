@if (IsVisible)
{
    <div class="modal">
        <div class="modal-content">
            <span class="close" @onclick="CloseDialog">&times;</span>
            <h3>Add Income</h3>
            <!-- Modal content goes here -->
            <label for="incomeSource">Income Source:</label>
            <input type="text" id="incomeSource" @bind="IncomeSource" /><br /><br />

            <label for="amount">Amount:</label>
            <input type="number" id="amount" @bind="Amount" /><br /><br />

            <button @onclick="SubmitIncome">Submit</button>
        </div>
    </div>
}

@code {
    [Parameter] public bool IsVisible { get; set; }
    [Parameter] public EventCallback OnClose { get; set; }
    [Parameter] public EventCallback<(string IncomeSource, decimal Amount)> OnSubmit { get; set; }

    private string IncomeSource { get; set; }
    private decimal Amount { get; set; }

    private void CloseDialog()
    {
        IsVisible = false;
        OnClose.InvokeAsync();
    }

    private void SubmitIncome()
    {
        OnSubmit.InvokeAsync((IncomeSource, Amount));
        CloseDialog();
    }
}
